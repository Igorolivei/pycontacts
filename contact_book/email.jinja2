{% extends "layout.html" %}
{% block title %}Send E-mail{% endblock %}
{% block content %}
<a href="/{{ uid }}">Back</a>
<form action="/email/{{ uid }}/{{ email }}">
	<p>Send e-mail to: {{ email }}</p>
	<p>Subject: <input type=text name="subject"></p>
	<p>E-mail:</p>
	<textarea rows="4" cols="50" name="email"></textarea><br>
    <input type=submit name="submit" value="Send">
</form>
{% endblock %}